CREATE TABLE area (
    id TEXT NOT NULL PRIMARY KEY,
    tags TEXT NOT NULL,
    created_at TEXT NOT NULL,
    updated_at TEXT NOT NULL,
    deleted_at TEXT NOT NULL
);

insertOrReplace:
INSERT OR REPLACE
INTO area(
    id,
    tags,
    created_at,
    updated_at,
    deleted_at
)
VALUES ?;

selectAllNotDeleted:
SELECT *
FROM area
WHERE deleted_at == '';

selectById:
SELECT *
FROM area
WHERE id = ?;

selectMaxUpdatedAt:
SELECT max(updated_at)
FROM area;