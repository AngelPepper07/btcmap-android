import kotlinx.serialization.json.JsonObject;

CREATE TABLE report (
    area_id TEXT NOT NULL,
    date TEXT NOT NULL,
    tags TEXT AS JsonObject NOT NULL,
    created_at TEXT NOT NULL,
    updated_at TEXT NOT NULL,
    deleted_at TEXT NOT NULL
);

insertOrReplace:
INSERT OR REPLACE
INTO report(
    area_id,
    date,
    tags,
    created_at,
    updated_at,
    deleted_at
)
VALUES ?;

selectByAreaId:
SELECT *
FROM report
WHERE area_id = ?
ORDER BY date;

deleteAll:
DELETE
FROM report;